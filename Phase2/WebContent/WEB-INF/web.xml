<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ServletAndJSP</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LogInPage1</servlet-name>
    <servlet-class>phase2.Servlet.LogInPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogInPage1</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>phase2.Servlet.DashBoard</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getMethod</servlet-name>
    <servlet-class>phase2.Servlet.GetMethod</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getMethod</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>postMethod</servlet-name>
    <servlet-class>phase2.Servlet.PostMethod</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>postMethod</servlet-name>
    <url-pattern>/registerByPost</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cookie1</servlet-name>
    <servlet-class>phase2.Servlet.Servlet1</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>cookie2</servlet-name>
    <servlet-class>phase2.Servlet.Servlet2</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cookie1</servlet-name>
    <url-pattern>/LoginHere</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>cookie2</servlet-name>
    <url-pattern>/RegisterHere</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Home</display-name>
    <servlet-name>Home</servlet-name>
    <servlet-class>phase2.Servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>ValidateFilter</display-name>
    <filter-name>ValidateFilter</filter-name>
    <filter-class>phase2.Servlet.ValidateFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ValidateFilter</filter-name>
    <servlet-name>Home</servlet-name>
  </filter-mapping>
  <filter>
    <display-name>DataCheckFilter</display-name>
    <filter-name>DataCheckFilter</filter-name>
    <filter-class>phase2.Servlet.DataCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DataCheckFilter</filter-name>
    <servlet-name>Home</servlet-name>
  </filter-mapping>
</web-app>